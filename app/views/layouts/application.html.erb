<!DOCTYPE html>
<html>
<head>
  <title>Luna</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <h1><%= link_to 'Luna', root_path %></h1>

  <nav>
    <%= link_to 'Our Deliberative Bodies', bodies_path %>
  </nav>

  <nav>
    <% if user_signed_in? %>
      Welcome, <%= current_user.username %>
      <%= link_to_unless_current 'Settings', edit_user_registration_path %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to_unless_current 'Sign In', new_user_session_path %>
      <%= link_to_unless_current 'Sign Up', new_user_registration_path %>
    <% end %>
  </nav>
</header>

<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
